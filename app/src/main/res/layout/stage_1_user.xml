<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.secretingradient.ingradientlauncher.element.TrashView
        android:id="@+id/trash_view1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="15dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/user_stage_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="true"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toTopOf="@id/trash_view2"
        app:layout_constraintTop_toBottomOf="@+id/trash_view1" />

    <com.secretingradient.ingradientlauncher.element.TrashView
        android:id="@+id/trash_view2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="15dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent" />
</merge>