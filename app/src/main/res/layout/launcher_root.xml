<?xml version="1.0" encoding="utf-8"?>
<com.secretingradient.ingradientlauncher.Launcher xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launcher_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/root_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

    <com.secretingradient.ingradientlauncher.drag.DragLayer
        android:id="@+id/drag_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</com.secretingradient.ingradientlauncher.Launcher>