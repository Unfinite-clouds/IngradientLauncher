<?xml version="1.0" encoding="utf-8"?>
<com.secretingradient.ingradientlauncher.Stage xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="40dp"
    android:clipChildren="true"
    android:clipToPadding="true"
    >

    <ImageView
        android:id="@+id/research_sensor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/PrimaryDark"
        />
    <TextView
        android:id="@+id/research_text"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:background="@color/Accent"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:includeFontPadding="false"
        />
</com.secretingradient.ingradientlauncher.Stage>